<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS}[%level][%thread] - %logger{10}.%M : %msg%n</pattern>
			<charset>UTF-8</charset> 
		</encoder>
	</appender>

	<springProfile name="dev">
		<root level="INFO">
			<appender-ref ref="STDOUT" />
		</root>
		<!-- 开启调试模式，打印 SQL 语句 -->
		<logger level="DEBUG" name="com.dayi" additivity="false">
			<appender-ref ref="STDOUT"/>
		</logger>
	</springProfile>


	<springProfile name="inet,test,prod,spot,finance">

		<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<FileNamePattern>${profile.logger.path}/dayi-wms-%d{yyyy-MM-dd}.log</FileNamePattern>
				<MaxHistory>30</MaxHistory>
			</rollingPolicy>
			<encoder>
				<pattern>%d{yyyyMMdd HH:mm:ss.SSS}[%level][%thread]- %logger{10}.%M : %msg%n</pattern>
				<charset>UTF-8</charset>
			</encoder>
			<!-- max file size -->
			<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
				<MaxFileSize>10MB</MaxFileSize>
			</triggeringPolicy>
		</appender>

		<root level="INFO">
			<appender-ref ref="FILE" />
		</root>
	</springProfile>

</configuration>